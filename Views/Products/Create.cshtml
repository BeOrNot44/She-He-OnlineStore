@model She___He_Store.Models.Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="row mb-3">
                            <label asp-for="Name" class="control-label col-sm-2 col-form-label"></label>

                            <div class="col-sm-10">
                                <input asp-for="Name" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row mb-3">
                            <label asp-for="Price" class="control-label col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Price" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row mb-3">
                            <label asp-for="SalePrice" class="control-label col-sm-2 col-form-label">Sale</label>
                            <div class="col-sm-10">
                                <input asp-for="SalePrice" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="SalePrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row mb-3">
                            <label asp-for="StockQuantity" class="control-label col-sm-2 col-form-label">In Stock</label>
                            <div class="col-sm-10">
                                <input asp-for="StockQuantity" class="form-control" />
                            </div>
                        </div>
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row mb-3">
                            <label asp-for="CategoryId" class="control-label col-sm-2 col-form-label">Category</label>
                            <div class="col-sm-10">
                                <select asp-for="CategoryId" name="catName" class="form-control" asp-items="ViewBag.CategoryNames"></select>
                            </div>
                        </div>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="mb-3">
                            <label asp-for="ImageFile" class="control-label col-sm-2 col-form-label">Image</label>
                            <input asp-for="ImageFile" accept="Image/*" class="form-control bg-dark" id="formFile" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-floating">
                        <div class="mb-3">
                            <label asp-for="Description" class="control-label col-sm-2 col-form-label"></label>
                            <textarea asp-for="Description" class="form-control" placeholder="Leave a Description here" id="floatingTextarea" style="height: 150px;"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" value="Create" class="btn btn-success rounded-pill m-2">Add New</button>
                        <a asp-action="Index" class="btn btn-outline-primary m-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

