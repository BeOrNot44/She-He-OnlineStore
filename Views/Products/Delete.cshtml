@model She___He_Store.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SalePrice)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SalePrice)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.StockQuantity)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.StockQuantity)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Category)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Category.Id)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ImagePath)
                    </dt>
                    <dd class="col-sm-10">
                        <img src="@Url.Content("~/HomeAssets/img/" + Model.ImagePath)" asp-append-version="true" width="100" height="100" class="rounded-circle" />
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-primary w-90 m-2" />
                    <a asp-action="Index" class="btn btn-outline-primary m-2">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>

