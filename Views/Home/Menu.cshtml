@model IEnumerable<Category>
@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- Service Start -->
<div class="container-fluid service py-6">
    <div class="container">
        <div class="text-center wow bounceInUp" data-wow-delay="0.1s">
            <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">Our Services</small>
            <h1 class="display-5 mb-5">What We Offer</h1>
        </div>
        <div class="row g-4">
            @foreach (var item in Model) //
            {
                <div class="col-lg-3 col-md-6 col-sm-12 wow bounceInUp" data-wow-delay="0.7s">
                    <div class="bg-light rounded service-item">
                        <div class=" d-flex align-items-center justify-content-center p-4">
                            <div class=" text-center">
                                <img src=@Url.Content("~/HomeAssets/img/" + item.ImagePath) asp-append-version="true" width="250" height="250" class="rounded-circle" />
                                <p class="mb-4">--------------------</p>

                                <a asp-action="GetProductByCategory" asp-route-id="@item.Id" class="btn btn-primary px-4 py-2 rounded-pill">@item.CategoryName</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Service End -->