                        <div class="col">
                            <input type="date" class="form-control" name="OrderDate" placeholder="Order Date" />
                        </div>
                        <div class="col">
                            <input type="date" class="form-control" name="DeliveryDate" placeholder="Delivery Date" />
                        </div>
                        <div class="col-auto">
