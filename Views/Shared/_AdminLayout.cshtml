@inject IHttpContextAccessor context1;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>DarkPan - Bootstrap 5 Admin Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/AdminDashbordAssets/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playball&display=swap">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/AdminDashbordAssets/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/AdminDashbordAssets/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/AdminDashbordAssets/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/AdminDashbordAssets/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-secondary navbar-dark">
                <a asp-action="Index" asp-controller="Home" class="navbar-brand mx-4 mb-3">
                    <h1 class="fw-bold mb-0" style="font-weight: 400 !important;font-family: 'Playball', cursive !important; color:#d4a762 !important">
                        She<span class="text-dark">&</span>He
                    </h1>
                    

                </a>
                <div class="navbar-nav w-100">
                    <a asp-action="Dashboard" asp-controller="Admin" class="nav-item nav-link active"><i class="fa fa-chart-bar me-2"></i>Dashboard</a>
                    <a asp-action="Index" asp-controller="Customers" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Customers</a>
                    <a asp-controller="Admin" asp-action="ManageTestimonial" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>Tistimonials</a>
                    <a asp-controller="Reviews" asp-action="Index" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>Reviews</a>
                    <a asp-controller="Admin" asp-action="Contact" class="nav-item nav-link"><i class="far fa-file-alt me-2"></i>Contact</a>
                    <a asp-controller="Admin" asp-action="PendingOrders" class="nav-item nav-link"><i class="fa fa-tachometer-alt me-2"></i>Pending Orders</a>
                    <a asp-controller="Home" asp-action="EditHome" class="nav-item nav-link"><i class="fas fa-cogs me-2"></i>Manage Home</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>Products</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-action="Index" asp-controller="Categories" class="dropdown-item">
                                <i class="fas fa-utensil-spoon me-1"></i>
                                Categories
                            </a>
                            <a asp-action="Index" asp-controller="Products" class="dropdown-item">
                                <i class="fas fa-pizza-slice me-1"></i>
                                Menu
                            </a>
                        </div>
                    </div>

                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <v class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0" style="font-weight: 400 !important;font-family: 'Playball', cursive !important; color:#d4a762 !important">
                        She<span class="text-dark">&</span>He
                    </h2>
                </a>
                <a class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <div class="navbar-nav align-items-center ms-auto">

                    <div class="form-control bg-dark border-0" type="search" placeholder=""></div>
                                <div class="nav-item dropdown">
                        @{
                            if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <form method="post" asp-controller="LoginAndRegister" asp-action="Logout" asp-antiforgery="true">

                                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                            <img class="rounded-circle me-lg-2" src="/HomeAssets/img/@ViewBag.CustomerImg" alt="" style="width: 50px; height: 50px;">
                                        <span class="d-none d-lg-inline-flex">@ViewBag.CustomerName</span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end bg-secondary border-0 rounded-0 rounded-bottom m-0">
                                        <a asp-controller="Admin" asp-action="ProfileEdit" asp-route-id="@ViewBag.id_customer" class="dropdown-item">My Profile</a>
                                        <form method="post" asp-controller="LoginAndRegister" asp-action="Logout" asp-antiforgery="true">
                                            <button type="submit" class="dropdown-item">Log out</button>
                                        </form>

                                    </div>
                                </form>
                            }
                            else
                            {
                                <a asp-action="Login" asp-controller="LoginAndRegister" class="btn btn-primary py-2 px-4 d-none d-xl-inline-block rounded-pill">Sign in</a>
                            }
                        }
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->
            <div>
                @RenderBody()
            </div>
            <!-- Footer Start -->
            <footer class="container-fluid pt-4 px-4 py-3" style="bottom: 0;">
                <div class="bg-secondary rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-end">
                            &copy; <a asp-action="Index" asp-controller="Home" >She&He</a>, All Right Reserved.
                        </div>
                    </div>
                </div>
            </footer>
            <!-- Footer End -->
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminDashbordAssets/lib/chart/chart.min.js"></script>
    <script src="~/AdminDashbordAssets/lib/easing/easing.min.js"></script>
    <script src="~/AdminDashbordAssets/lib/waypoints/waypoints.min.js"></script>
    <script src="~/AdminDashbordAssets/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/AdminDashbordAssets/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/AdminDashbordAssets/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/AdminDashbordAssets/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/AdminDashbordAssets/js/main.js"></script>
</body>

</html>