@inject IHttpContextAccessor context1;
@model She___He_Store.Models.Testimonial
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container-fluid contact py-6 wow bounceInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row g-0">
            <div class="col-1">
                <img src="~/HomeAssets/img/background-site.jpg" class="img-fluid h-100 w-100 rounded-start" style="object-fit: cover; opacity: 0.7;" alt="">
            </div>
            <div class="col-10">
                <div class="border-bottom border-top border-primary bg-light py-5 px-4">
                    <div class="text-center">
                        <small class="d-inline-block fw-bold text-dark text-uppercase bg-light border border-primary rounded-pill px-4 py-1 mb-3">Testimonial</small>
                        <h1 class="display-5 mb-5"> What you want to say</h1>
                    </div>
                    <div class="row g-4 form">
                        <form asp-action="ShowTestimonial" asp-controller="Testimonials">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input type="hidden" asp-for="CustomerId" value="@ViewBag.id_customer" />


                            <div class="form-group">
                                <label asp-for="TestimonialText" class="control-label"></label>
                                <textarea asp-for="TestimonialText" class="form-control border-primary p-2" placeholder="Leave your message here." /></textarea>
                                <span asp-validation-for="TestimonialText" class="text-danger"></span>
                            </div>

                            <input type="hidden" asp-for="TestimonialDate" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" />

                            <div class="form-group">
                                <label asp-for="Rating" class="control-label">Rating</label>
                                <select asp-for="Rating" class="form-control">
                                    <option value="1">&#9733</option> <!-- 1 Star -->
                                    <option value="2">&#9733&#9733</option> <!-- 2 Stars -->
                                    <option value="3">&#9733&#9733&#9733</option> <!-- 3 Stars -->
                                    <option value="4">&#9733&#9733&#9733&#9733</option> <!-- 4 Stars -->
                                    <option value="5">&#9733&#9733&#9733&#9733&#9733</option> <!-- 5 Stars -->
                                </select>
                                <span asp-validation-for="Rating" class="text-danger"></span>
                            </div>
                            <div class="form-group col-12 text-center">
                                <input type="submit" value="Testimonial" class="btn btn-primary px-5 py-3 rounded-pill" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-1">
                <img src="~/HomeAssets/img/background-site.jpg" class="img-fluid h-100 w-100 rounded-end" style="object-fit: cover; opacity: 0.7;" alt="">
            </div>

        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

